        "HIGH PERFORMANCE", "SAAS", "IAAS", "SERVERLESS", "MODERN WEB"
    ];

    // Fisher-Yates Shuffle Algorithmus für echte Zufälligkeit
    function shuffleArray(array) {
        for (let i = array.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [array[i], array[j]] = [array[j], array[i]];
        }
        return array;
    }

    document.addEventListener('DOMContentLoaded', () => {
        // 1. Wörter mischen und einfügen
        const container = document.getElementById('bg-words');
        if (container) {
            const shuffled = shuffleArray([...buzzwords]); // Kopie erstellen und mischen
            container.innerHTML = shuffled.map(word => `<span>${word}</span>`).join('');
        }

        // 2. Scroll-Logik für Mobile
        if (window.innerWidth <= 768) {
